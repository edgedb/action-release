{
  "name": "validate-pr",
  "version": "1.0.0",
  "description": "Validate a release pull request",
  "main": "lib/main.js",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml",
    "type-check": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "esbuild src/main.ts --outfile=dist/index.cjs --bundle --platform=node --format=cjs --sourcemap --minify",
    "all": "npm run type-check && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edgedb/action-release"
  },
  "author": "EdgeDB Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@octokit/graphql": "8.1.1",
    "@renovate/pep440": "1.0.0",
    "graphql": "^16.9.0",
    "node-fetch": "^3.3.2",
    "parse-diff": "^0.11.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript": "4.1.0",
    "@graphql-codegen/typescript-resolvers": "4.3.0",
    "@octokit/graphql-schema": "^15.25.0",
    "@types/node": "^22.7.6",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/parser": "^8.10.0",
    "esbuild": "^0.19.4",
    "eslint": "^8.57.1",
    "eslint-plugin-github": "^5.0.2",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}

{
  "name": "validate-pr",
  "version": "1.0.0",
  "description": "Validate a release pull request",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "precommit": "yarn run build && yarn run package && git add dist/",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edgedb/action-release"
  },
  "author": "EdgeDB Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^5.0.0",
    "@octokit/graphql": "4.8.0",
    "@renovate/pep440": "1.0.0",
    "graphql": "^15.4.0",
    "node-fetch": "^3.0.0",
    "parse-diff": "^0.8.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.0",
    "@graphql-codegen/typescript": "2.2.2",
    "@graphql-codegen/typescript-resolvers": "2.2.1",
    "@octokit/graphql-schema": "^10.8.0",
    "@types/node": "^16.9.6",
    "@typescript-eslint/parser": "^4.8.2",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.14.0",
    "eslint-plugin-github": "^4.1.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  }
}

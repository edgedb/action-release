{
  "name": "validate-pr",
  "version": "1.0.0",
  "description": "Validate a release pull request",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "precommit": "yarn run build && yarn run package && git add dist/",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edgedb/action-release"
  },
  "author": "EdgeDB Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@octokit/graphql": "4.8.0",
    "@renovate/pep440": "1.0.0",
    "graphql": "^16.2.0",
    "node-fetch": "^2.6.7",
    "parse-diff": "^0.9.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-resolvers": "2.4.3",
    "@octokit/graphql-schema": "^10.73.0",
    "@types/node": "^17.0.8",
    "@types/node-fetch": "^2.6.0",
    "@typescript-eslint/parser": "^5.9.1",
    "@vercel/ncc": "^0.33.1",
    "eslint": "^8.6.0",
    "eslint-plugin-github": "^4.3.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  }
}
